---
const { height = '600px', maxHeight = '100svw' } = { ...Astro.props };
---

<div class="parallax">
  <slot />
</div>

<style define:vars={{ height, maxHeight }}>
  .parallax {
    margin-left: calc(-1 * var(--content-padding));
    height: auto;
    height: var(--height);
    max-height: var(--maxHeight);
    width: 100svw;
    overflow: hidden;

    .simpleParallax {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    img {
      display: inline-block;
      scale: 0.6;
      height: 100%;
      min-width: 1024px;
      max-width: 100%;
      aspect-ratio: auto;
      position: relative;
    }
  }
</style>
