---
import { Image } from 'astro:assets';
import logo from '@assets/Logo2018_600.jpg';
import { appConfig } from '@root/app.config';
import AppSidebarButton from '@components/AppSidebarButton.astro';
import NavLink from '@components/NavLink.astro';
---

<header>
  <AppSidebarButton />
  <nav>
    <NavLink href="brillen">Brillen</NavLink>
    <NavLink href="hoerakustik">HÃ¶rakustik</NavLink>
    <NavLink href="kontaktlinsen">Kontaktlinsen</NavLink>
  </nav>
  <a class="root-link" href="">
    <Image src={logo} alt={appConfig.title} />
  </a>
  <nav>
    <NavLink href=" team">Team</NavLink>
    <NavLink href="aktuelles">Aktuelles</NavLink>
    <NavLink href="termin">Termin</NavLink>
    <NavLink href="kontakt">Kontakt</NavLink>
  </nav>
</header>

<style>
  header {
    display: flex;
    box-sizing: border-box;
    width: 100svw;
    height: var(--app-header-height);
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-header);
    color: var(--color-on-header);
    padding: 0 var(--content-padding);
    z-index: 89;

    > nav {
      display: none;
    }
  }

  .root-link {
    filter: none !important;

    img {
      display: block;
      height: auto;
      width: auto;
      margin: 0 2rem;
      max-width: var(--logo-width);
    }
  }

  @media only screen and (min-width: 800px) {
    header > nav {
      display: block;
    }
  }
</style>
