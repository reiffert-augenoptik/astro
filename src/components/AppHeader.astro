---
import { Image } from "astro:assets";
import logo from "../images/Logo2018_600.jpg";
---

<header>
  <div>
    <Image src={logo} alt="foo bar" />
  </div>
</header>

<style>
  header {
    display: flex;
    width: 100svw;
    height: var(--app-header-height);
    align-items: center;
    justify-content: center;
  }

  img {
    display: block;
    height: auto;
    width: auto;
    max-width: var(--logo-width);
  }
</style>
