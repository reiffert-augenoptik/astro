---
const { align = 'start', width = 'large' } = { ...Astro.props };
---

<div style={`text-align: ${align}; max-width: var(--content-width-${width});`}>
  <slot />
</div>

<style>
  div {
    margin: calc(2 * var(--content-padding)) auto;

    > img {
      border-radius: var(--border-radius);
      max-width: 100%;
      height: auto;
    }
  }
</style>
