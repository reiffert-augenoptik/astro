---
const { caption, href, height, width } = { ...Astro.props };
---

<a class="card" href={href} style={`height: ${height}px; width: ${width}px;`}>
  <div class="card-footer"><p>{caption}</p></div>
  <slot />
</a>

<style>
  .card {
    transition: scale 200ms;
    scale: 1;
    border-radius: var(--border-radius);
    overflow: hidden;
    max-height: 40svh;
    filter: none !important;

    &:hover {
      scale: 1.02;
    }

    img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
  }

  .card-footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 4rem;
    backdrop-filter: blur(5px);
    z-index: 5;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: color-mix(in hsl, var(--color-bg-content) 65%, transparent);

    p {
      margin: auto;
      font-size: x-large;
      font-weight: bolder;
    }
  }

  @media only screen and (min-width: 800px) {
    .card {
      max-width: unset;
      max-height: unset;
    }
  }
</style>
