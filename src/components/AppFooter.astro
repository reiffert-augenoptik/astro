---
import { Image } from 'astro:assets';
import instagram from '@assets/instagram.webp';
import facebook from '@assets/facebook.webp';
import { appConfig } from '@root/app.config';
import NavLink from './NavLink.astro';
---

<footer>
  <div class="socials">
    <a href="http://www.instagram.com/reiffert_augenoptik" target="_blank">
      <Image src={instagram} alt="Instagram" />
    </a>
    <a href="https://www.facebook.com/ReiffertAugenoptik/" target="_blank">
      <Image src={facebook} alt="Facebook" />
    </a>
  </div>

  <div class="business-info">
    <b>{appConfig.title}</b>
    <p>{appConfig.businessInfo.adress}</p>
    <p>{appConfig.businessInfo.phone}</p>
    <p>{appConfig.businessInfo.mail}</p>
  </div>

  <div class="opening-hours">
    <b>Ã–ffnungszeiten:</b>
    <p>{appConfig.businessInfo.openingHours.monday}</p>
    <p>{appConfig.businessInfo.openingHours.tuesday}</p>
    <p>{appConfig.businessInfo.openingHours.wednesday}</p>
    <p>{appConfig.businessInfo.openingHours.thursday}</p>
    <p>{appConfig.businessInfo.openingHours.friday}</p>
    <p>{appConfig.businessInfo.openingHours.saturday}</p>
  </div>

  <div class="footer-links">
    <NavLink href="impressum">Impressum</NavLink>
    <NavLink href="datenschutz">Datenschutz</NavLink>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-bg-footer);
    color: var(--color-on-footer);
    padding: calc(2 * var(--content-padding)) var(--content-padding);
    display: flex;
    flex-direction: column;
    gap: 1rem;

    > * {
      text-align: center;
    }

    b,
    p {
      margin: 0;
    }
  }

  .socials {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;

    img {
      height: var(--footer-social-size);
      width: var(--footer-social-size);
    }
  }

  .business-info {
    font-size: large;
  }
</style>
